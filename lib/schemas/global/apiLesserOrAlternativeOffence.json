{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "http://justice.gov.uk/core/courts/external/apiLesserOrAlternativeOffence.json",
  "description": "The details of a lesserOrAlternativeOffence verdict",
  "type": "object",
  "properties": {
    "offenceDefinitionId": {
      "description": "The identifier of the offence from reference data",
      "$ref": "http://justice.gov.uk/core/courts/external/apiCourtsDefinitions.json#/definitions/uuid"
    },
    "offenceCode": {
        "type": "string"
    },
    "offenceTitle": {
        "type": "string"
    },
    "offenceTitleWelsh": {
        "type": "string"
    },
    "offenceLegislation": {
        "type": "string"
    },
    "offenceLegislationWelsh": {
        "type": "string"
    }
  },
  "additionalProperties": false,
  "required": [
    "offenceDefinitionId",
    "offenceCode",
    "offenceTitle",
    "offenceLegislation"
  ]
}