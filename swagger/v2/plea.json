{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "http://justice.gov.uk/core/courts/external/apiPlea.json",
  "description": "The plea entered at a hearing",
  "type": "object",
  "properties": {
    "originating_hearing_id": {
      "$ref": "definitions.json#/definitions/uuid"
    },
    "delegated_powers": {
      "$ref": "delegated_powers.json#"
    },
    "offence_id": {
      "$ref": "definitions.json#/definitions/uuid"
    },
    "application_id": {
      "$ref": "definitions.json#/definitions/uuid"
    },
    "plea_date": {
      "$ref": "definitions.json#/definitions/datePattern"
    },
    "plea_value": {
      "type": "string"
    },
    "lesser_or_alternative_offence": {
      "$ref": "lesser_or_alternative_offence.json#"
    }
  },
  "anyOf": [
    {
      "required": [
        "offence_id",
        "plea_date",
        "plea_value"
      ]
    },
    {
      "required": [
        "application_id",
        "plea_date",
        "plea_value"
      ]
    }
  ],
  "additionalProperties": false
}
